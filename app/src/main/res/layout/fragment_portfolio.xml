<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_margin="16dp"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="8dp"
    card_view:strokeColor="@color/primaryColor"
    card_view:strokeWidth="2dp"
    android:layout_gravity="center"
    android:backgroundTint="@color/splashScreen">

    <LinearLayout
        android:padding="20dp"
        android:orientation="vertical"
        android:background="@color/primaryLightBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtName"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="@color/text"
            android:fontFamily="sans-serif-medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtCollege"
            android:textColor="@color/text"
            android:fontFamily="sans-serif"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtSkills"
            android:textColor="@color/text"
            android:fontFamily="sans-serif"
            android:textSize="16sp"
            android:layout_marginTop="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtProjectTitle"
            android:textStyle="bold"
            android:textColor="@color/primaryColor"
            android:textSize="18sp"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtProjectDesc"
            android:textColor="@color/text"
            android:fontFamily="sans-serif"
            android:textSize="15sp"
            android:layout_marginTop="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
