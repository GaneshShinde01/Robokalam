<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DBEBFD"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Robokalam Logo -->
        <ImageView
            android:id="@+id/robokalamLogo"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:src="@drawable/logo3"
            android:contentDescription="Robokalam Logo"
            android:layout_marginBottom="24dp"
            android:scaleType="centerInside"
            android:background="@drawable/logo_background"
            android:padding="16dp" />

        <!-- About Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="20dp"
            card_view:cardElevation="8dp"
            android:layout_margin="8dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_quote_card"
                android:padding="20dp">

                <TextView
                    android:id="@+id/aboutTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="About Robokalam"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#1A237E"
                    android:layout_gravity="center"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/aboutText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rozha_one"
                    android:lineSpacingExtra="6dp"
                    android:text="@string/about_robokalam"
                    android:textAlignment="center"
                    android:textColor="#444444"
                    android:textSize="16sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
